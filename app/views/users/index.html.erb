<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto">
      <table class="table table-hover text-center mt-5">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= attachment_image_tag(user, :profile_image, size: "60x60", fallback: "icon.png", style: "border-radius: 50%;") %>
                <% end %>
              </td>
              <td class="align-middle text-left">
                <strong><%= user.name %></strong>
              </td>
              <td class="align-middle">
                <% if user != current_user %>
                  <%= link_to chat_path(user) do %>
                    チャットを開く
                  <% end %>
                <% end %>
              </td>
              <td class="align-middle">
                <%= link_to "", user_path(user), class: "fas fa-search" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>