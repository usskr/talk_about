<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto">
      <table class="table table-hover text-center mt-5">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>ユーザー名</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td colspan="1"></td>
              <td class="text-left"><strong><%= user.name %></strong></td>
              <td><%= link_to "", user_path(user), class: "fas fa-search" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>