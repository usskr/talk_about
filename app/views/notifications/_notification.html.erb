<% visitor = notification.visitor %>

<% case notification.action %>
<% when 'chat' %>
  <%= l notification.created_at, format: :short %>
  <%= link_to user_path(visitor) do %>
    <%= attachment_image_tag(visitor, :profile_image, size: "40x40", fallback: "icon.png", style: "border-radius: 50%;") %>
    <%= visitor.name %>
  <% end %>
  <span>さんがあなたにチャットを送りました</span>
  <hr>
<% end %>