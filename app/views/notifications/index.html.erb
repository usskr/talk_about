<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-9 col-lg-8 mx-auto my-5">
      <% notifications = @notifications.where.not(visitor_id: current_user.id) %>
      <% if notifications.exists? %>
        <%= render notifications %>
      <% else %>
        <p>通知はありません</p>
      <% end %>
    </div>
  </div>
</div>